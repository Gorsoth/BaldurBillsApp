<!DOCTYPE html>
<html lang="en">

@*For active link highlight*@
@{
	var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
	var actionName = ViewContext.RouteData.Values["action"]?.ToString();
}

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BaldurBillsApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BaldurBillsApp.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BaldurBillsApp</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @((controllerName == "InvoicesList" && actionName == "Index") ? "active-link" : "")" asp-controller="InvoicesList" asp-action="Index">Invoices list</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @(controllerName == "Prepayments" ? "active-link" : "")" asp-controller="Prepayments" asp-action="Index">Prepayments</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @(controllerName == "CostTypes" ? "active-link" : "")" asp-controller="CostTypes" asp-action="Index">Cost types</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @(controllerName == "ToPlnRates" ? "active-link" : "")" asp-controller="ToPlnRates" asp-action="Index">Currency rates</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @(controllerName == "Vendors" ? "active-link" : "")" asp-controller="Vendors" asp-action="Index">Vendors</a>
						</li>
						<li class="nav-item">
							<a class="nav-item nav-link @(controllerName == "Reports" ? "active-link" : "")" asp-controller="Reports" asp-action="Index">Reports</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - BaldurBillsApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
